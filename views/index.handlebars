<h1>Burger!</h1>

<h2>Burgers that haven't been devoured yet!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <div>{{id}}.{{burger_name}}</div>
    <div>
        <form class="change-devoured">
            <input type="hidden" class="burger_id" value={{id}}>
            <button type="submit"> Devour It</button>
        </form>
    </div>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <input type="text" placeholder="{{id}}.{{burger_name}}" readonly>
    {{/if}}
    {{/each}}
</ul>
<form class="create-form">
    <h2>Add a Burger</h2>


    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="status" value="1" checked> Devoured!<br>
        <input type="radio" name="status" value="0"> Up for Grabs!
    </div>

    <button type="submit">Add Burger</button>
</form>